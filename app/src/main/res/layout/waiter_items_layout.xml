<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="357dp"
        android:layout_height="110dp"
        android:background="#ADD1F4">
    <RelativeLayout
        android:layout_margin="7dp"
        android:layout_width="357dp"
        android:layout_height="110dp"

        android:background="@drawable/inputdate">
        <TextView
            android:id="@+id/text_num_table"
           android:text="№ стола"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="#52565A"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/zakaz_waiter"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:textAlignment="center"
            android:textColor="#52565A"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/vizov_waiter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textColor="#52565A"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/place_waiter_zakaz"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:textColor="#52565A"
            android:gravity="center"
            android:textSize="15dp"
            />




        <TextView
            android:id="@+id/komment_waiter"
            android:layout_width="0dp"
            android:layout_height="0dp"
         />
        <TextView
            android:id="@+id/table_waiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:textColor="#52565A"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/symma_waiter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/pid_waiter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />



    </RelativeLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>