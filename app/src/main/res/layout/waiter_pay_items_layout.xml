<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#52535A">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/inputdate"
        android:layout_margin="7dp">
        <TextView
           android:text="№ стола"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="#B1B2B3"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/zakaz_waiter_pay"
            android:layout_width="0dp"
            android:layout_height="0dp"
             />
        <TextView
            android:id="@+id/barman_waiter_pay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

        <TextView
            android:text="   ID:   "
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:textColor="#B1B2B3"
            android:gravity="center"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/id_zakaz"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="53dp"
            android:textColor="#B1B2B3"
            android:gravity="center"

            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/table_waiter_pay"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:textColor="#B1B2B3"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/symma_waiter_pay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />



    </RelativeLayout>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>