<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest.Meny"
    >


    <include layout="@layout/content_main_primer"
        />
    <LinearLayout

        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back_guest_purchase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="17dp"
            android:src="@drawable/back_guest"
            tools:ignore="MissingConstraints" />


    </LinearLayout>
    <ImageView
        android:id="@+id/minus"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginTop="498dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/minus"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="90dp"
        android:src="@drawable/plus"
        tools:ignore="MissingConstraints" />
<TextView
    android:id="@+id/kolvo"
    android:layout_width="40dp"
    android:layout_height="30dp"
    android:layout_marginTop="500dp"
    android:layout_marginStart="50dp"
    android:gravity="center"
    android:text="1"
    android:textSize="20dp"
    android:textColor="#52565A"
    />
    <ImageView
        android:id="@+id/pokypka"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="270dp"
        android:src="@drawable/addcorzina"
        tools:ignore="MissingConstraints" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>