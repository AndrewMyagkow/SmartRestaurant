<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonguest"
    tools:context=".Guest.SettingsGuest">
    <LinearLayout

        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="#1B1C1E"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back_guest_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="17dp"
            android:src="@drawable/back_guest"
            tools:ignore="MissingConstraints" />


    </LinearLayout>
    <EditText
        android:id="@+id/numbertable"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:hint="Введите номер стола"
        android:background="@drawable/guestphon"
        android:textSize="13dp"
        android:textColor="#B1B2B3"
        android:textColorHint="#B1B2B3"
        android:inputType="textMultiLine"/>
    <ImageView
        android:id="@+id/save_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="305dp"
        android:src="@drawable/save"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/exit_guest"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="200dp"
        android:src="@drawable/exit"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Выход их аккаунта"
        android:textSize="13dp"
        android:textColor="#B1B2B3"
        android:layout_marginTop="510dp"
        android:layout_marginStart="30dp"/>


</RelativeLayout>