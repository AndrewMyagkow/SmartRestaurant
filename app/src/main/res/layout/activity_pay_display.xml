<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Waiter.PayDisplay"
    android:background="@drawable/backgrount">
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="45dp"

        android:background="#38393C"
        >

        <ImageView
            android:id="@+id/back_waiter_pay_display"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/back"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
    <TextView
        android:id="@+id/textzakazpay"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:text="Кухня:"
        android:layout_marginStart="10dp"
        android:textColor="#52565A"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/zakaz_display_pay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textzakazpay"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#B5B5B8"
        android:textSize="15sp"
        android:background="@drawable/inputdate"/>
    <TextView
        android:id="@+id/textbarpay"
        android:layout_width="wrap_content"
        android:text="Бар:"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/zakaz_display_pay"
        android:textColor="#52565A"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bar_display_pay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textbarpay"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#B5B5B8"
        android:textSize="15sp"
        android:background="@drawable/inputdate"/>
    <TextView
        android:id="@+id/textid"
        android:layout_width="wrap_content"
        android:text="ID:"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/bar_display_pay"
        android:textColor="#52565A"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/id_pay"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/bar_display_pay"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#B5B5B8"
        android:textSize="15sp"
        android:background="@drawable/inputdate"/>
    <TextView
        android:id="@+id/textnompay"
        android:layout_width="wrap_content"
        android:text="№ стола:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textid"
        android:textColor="#52565A"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nom_table"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/id_pay"
        android:layout_marginStart="90dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#B5B5B8"
        android:textSize="15sp"
        android:background="@drawable/inputdate"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Итог:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textnompay"
        android:textColor="#52565A"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itogpay"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_below="@+id/nom_table"
        android:layout_marginStart="70dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#B5B5B8"
        android:textSize="15sp"
        android:background="@drawable/inputdate"/>
    <Button
        android:id="@+id/paid_for"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Оплачено"
        android:layout_below="@id/itogpay"
        android:layout_marginStart="100dp"/>

</RelativeLayout>